    <!-- JavaScript Functions -->
    <script type="text/javascript">
    function autoResize(id){
      var newheight;
      
      if(document.getElementById){
	setTimeout(function(){
	ifbody = document.getElementById(id).contentDocument;
	try{
	  newheight = ifbody.getElementById("contents_pane").clientHeight;
	}catch(e){
	  newheight = e;
	}
	document.getElementById(id).height= (newheight+50) + "px";
	},1000);
      }

      $("#outbox").show();
      $("#loading").hide();
    }
    </script>
    <!-- End JavaScript Functions -->

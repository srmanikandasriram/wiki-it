  <!-- jQuery Functions -->
  <script type="text/javascript">
  $(document).ready(function(){
    $("#search-q").change(function(){
      //$("#outbox").attr('src',$(this).val());
      //alert($(this).val());
      $("#outbox").hide();
      $("#loading").show();
      var value = $(this).val();
      value = value.replace(/ /g,'_');
      alert(value);
      if(value.substring(0,4) != "http"){
        value = "http://en.wikipedia.org/wiki/" + value;
      }
      value = encodeURIComponent(value);
      alert(value);
      $("#outbox").attr('src','{{site_url}}search/' + value);
      //Dajaxice.search.query(Dajax.process,{'url':$(this).val(),});
      //$("#search-form").submit();
    });
  });
  </script>
  <!-- End jQuery Functions -->
